---
const { title, img, desc, url, badge, tags, date, target = '_blank' } = Astro.props;
---

<div class="animated-fill horizontal-card square-lg bg-base-100 hover:shadow-xl transition ease-in-out hover:scale-[102%]">
  <a href={url} target={target}>
    <div class="hero-content flex-col md:flex-col">
      <img src={img} alt={title} class="max-w-full square-lg" />
      <div class="divider my-0" style="color:hsl(287, 60%, 65%)"></div>
      <div class="grow w-full">
        <h1 class="text-xl font-bold">
          {title}
        </h1>
        <h1 class="text-xl font-bold">
          {badge && <div class="badge badge-main mx-2">{badge}</div>}
        </h1>
        <h6>{date}</h6>
        <p class="py-1 text-1xl">{desc}</p>
        <div class="card-actions justify-end">
          {tags && tags.map((tag) => <div class="badge badge-outline">{tag}</div>)}
        </div>
      </div>
    </div>
  </a>
</div>
